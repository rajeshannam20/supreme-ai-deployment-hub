# FastAPI Application Environment Variables Template
# Copy this file to .env and set your actual values

# JWT Configuration
JWT_SECRET=your-secure-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Encryption
ENCRYPTION_KEY=your-secure-encryption-key-here

# API Keys Storage
KEYS_FILE=keys.json

# Database Configuration (if using database)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# For SQLite: sqlite:///./app.db
# For MySQL: mysql://user:password@localhost:3306/dbname

# External API Keys (set these directly or manage via the API key management system)
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# CORS Settings (comma-separated origins for production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# File Upload Settings
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=uploads

# Redis Configuration (for caching/sessions if needed)
REDIS_URL=redis://localhost:6379/0

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn-here
LOG_FILE=app.log

# Vercel Environment Variables (set in Vercel dashboard)
# VERCEL_TOKEN=your-vercel-token
# VERCEL_ORG_ID=your-vercel-org-id  
# VERCEL_PROJECT_ID=your-vercel-project-id